<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context="p32929.passcodelock.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="setPass"
        android:layout_marginBottom="16dp"
        android:text="Set a pincode" />

    <Button
        android:layout_width="match_parent"
        android:onClick="changePass"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Change my pincode" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="disable"
        android:layout_marginBottom="16dp"
        android:text="Disable the pincode" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="checkPass"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:text="Lock my unit" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="exitApp"
        android:layout_marginBottom="16dp"
        android:text="Exit" />

</LinearLayout>